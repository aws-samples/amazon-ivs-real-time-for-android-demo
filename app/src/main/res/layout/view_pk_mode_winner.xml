<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:translationZ="@dimen/translation_big"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/light_rays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/banner_light_rays"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/margin_enormous"
        android:src="@drawable/banner_blue"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="@id/crest"
        app:layout_constraintStart_toStartOf="@id/crest"
        app:layout_constraintTop_toTopOf="@id/crest" />

    <com.amazon.ivs.stagesrealtime.ui.views.UserAvatarView
        android:id="@+id/winner_avatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@id/crest"
        app:layout_constraintStart_toStartOf="@id/crest"
        app:layout_constraintTop_toTopOf="@id/crest" />

    <ImageView
        android:id="@+id/crest"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/banner_crest"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
